{
  "environments": [
    {
      "name": "Local UI",
      "type": "web",
      "baseUrl": "http://localhost:4200",
      "notes": "Angular dev server started with npm start"
    },
    {
      "name": "Local API",
      "type": "api",
      "baseUrl": "https://localhost:7140",
      "notes": "Special Programs API running via dotnet run"
    }
  ],
  "testCases": [
    {
      "title": "Students smoke",
      "feature": "Students",
      "type": "playwright",
      "environment": "Local UI",
      "playwrightMode": "traditional",
      "entryPoint": "frontend/teks-mvp/tests/e2e/students.spec.ts",
      "steps": ["Login as educator", "Open students page", "Verify roster"],
      "schedule": "manual",
      "tags": ["students", "smoke"]
    },
    {
      "title": "Assignments e2e",
      "feature": "Assignments",
      "type": "playwright",
      "environment": "Local UI",
      "playwrightMode": "traditional",
      "entryPoint": "frontend/teks-mvp/tests/e2e/assignments.spec.ts",
      "schedule": "nightly",
      "tags": ["assignments", "regression"],
      "captureArtifacts": true
    },
    {
      "title": "Goals overview via MCP",
      "feature": "Goals",
      "type": "playwright",
      "environment": "Local UI",
      "playwrightMode": "mcp",
      "mcpSource": "frontend/teks-mvp/tests/mcp/goals-navigation.mcp.yaml",
      "mcpConfig": {
        "browser": "chromium",
        "headless": true
      },
      "steps": [
        "Navigate to goals",
        "Ensure progress indicators render",
        "Capture goals screenshot"
      ],
      "schedule": "manual",
      "captureArtifacts": true,
      "tags": ["goals", "mcp"]
    },
    {
